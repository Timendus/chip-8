clear_screen();

byte current = 2;
byte sum = 0;
byte xpos = 1;
byte ypos = 1;
byte div;
byte prime;

// Output only numbers that are prime numbers
while ( current < 50 ) {

  // Is this a prime number?
  div = 2;
  prime = 1;
  while ( div < current ) {
    // if ( current % div == 0 )
    if ( current - (div * (current/div)) == 0 ) {
      prime = 0;
    }
    div = div + 1;
  }

  // If so, then show it
  if ( prime ) {
    print_byte(current, xpos, ypos);
    ypos = ypos + 6;
    if ( ypos > 30 ) {
      ypos = 1;
      xpos = xpos + 20;
    }
  }

  current = current + 1;
}
